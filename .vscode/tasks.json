{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend:run",
      "type": "shell",
      "command": "mvn",
      "args": ["spring-boot:run"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "frontend:dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ],
  "compounds": [
    {
      "label": "dev:all",
      "dependsOn": ["backend:run", "frontend:dev"],
      "stopAll": true
    }
  ]
}